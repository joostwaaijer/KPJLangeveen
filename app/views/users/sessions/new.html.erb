<div class="container">
  <div class= 'col-sm-3'></div>
  <div class= 'col-sm-3'>
    <h2>Inloggen</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <label for="user_email">E-mail adres</label>
        <%= f.input :email, class: 'form-control', label: false, placeholder: 'E-mail adres' %>
     </div>
     <div class="form-group">
       <label for="user_password">Password</label>
       <%= f.input :password, class: 'form-control', label: false, placeholder: 'Wachtwoord' %>
     </div>
      <%= f.button :button, class: 'btn btn-primary' do %>
        Aanmelden
      <% end %>
    <% end %>
    <div class= 'col-sm-3'>
      <br/>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class= 'col-sm-3'>
    <%= image_tag "logo.png", width: '100%' %>
  </div>
</div>
