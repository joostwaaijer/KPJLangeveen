<div class="container h-100 d-flex justify-content-center">
  <div class= 'col-sm-3'></div>
  <div class= 'col-sm-3'>
    <h2>Aanmelden</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <label for="user_email">E-mail adres</label>
        <%= f.input :email, require: true, class: 'form-control', label: false, placeholder: 'E-mail adres' %>
      </div>
      <div class="form-group">
        <label for="user_email">Voornaam</label>
        <%= f.input :first_name, require: true, class: 'form-control', label: false, placeholder: 'Voornaam' %>
      </div>
      <div class="form-group">
        <label for="user_email">Achternaam</label>
        <%= f.input :last_name, require: true, class: 'form-control', label: false, placeholder: 'Achternaam' %>
      </div>
      <div class="form-group">
        <%= f.association :role, require: true, as: :hidden, value: 2, class: 'form-control', label: false, placeholder: 'Rol' %>
      </div>
      <div class="form-group">
        <label for="user_password">Wachtwoord</label>
        <%= f.input :password, require: true, class: 'form-control', label: false, placeholder: 'Wachtwoord' %>
      </div>
      <div class="form-group">
        <label for="user_password">Herhaal Wachtwoord</label>
        <%= f.input :password_confirmation, require: true, class: 'form-control', label: false, placeholder: 'Wachtwoord' %>
      </div>
      <%= f.button :button, class: 'btn btn-success' do %>
        Aanmelden
      <% end %>
    <% end %>
    <div class= 'col-sm-3'>
      <br/>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class= 'col-sm-3'>
    <%= image_tag "logo.png", width: '100%' %>
  </div>
</div>
